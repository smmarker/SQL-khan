/*Join best books and best authors*/
SELECT name, slj_bestbooks.title FROM bookriot_bestauthors
INNER JOIN slj_bestbooks
ON slj_bestbooks.author = bookriot_bestauthors.name
LEFT JOIN bestselling_books
ON bestselling_books.author = bookriot_bestauthors.name;

/*Join best authors and best selling books*/
SELECT DISTINCT bookriot_bestauthors.id, bestselling_books.author as bs_authors FROM bookriot_bestauthors
INNER JOIN bestselling_books
ON bestselling_books.author = bookriot_bestauthors.name;




